# bindsym XF86TouchpadToggle exec [ "$(xinput list-props 'ELAN1205:00 04F3:30E9 Touchpad' | grep 'Device Enabled' | grep -o '[01]$')" == "1" ] && xinput --disable 'ELAN1205:00 04F3:30E9 Touchpad' || xinput --enable 'ELAN1205:00 04F3:30E9 Touchpad'
